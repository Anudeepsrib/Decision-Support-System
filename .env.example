# Enterprise ARR Truing-Up DSS - Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ─── Application Settings ───
APP_NAME="ARR Truing-Up Decision Support System"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=production  # development, staging, production

# ─── Security Settings ───
SECRET_KEY=your-256-bit-secret-key-here-minimum-32-characters-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Policy
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGIT=true
PASSWORD_REQUIRE_SPECIAL=true
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# ─── Database Configuration ───
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/arr_dss_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_ECHO=false

# ─── Redis Configuration (for caching & rate limiting) ───
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your-redis-password-here

# ─── CORS Configuration ───
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://admin.your-domain.com
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Authorization,Content-Type,X-Requested-With

# ─── Rate Limiting ───
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_AUTH=5/minute
RATE_LIMIT_UPLOAD=10/minute
RATE_LIMIT_SENSITIVE=10/minute

# ─── File Upload Settings ───
MAX_UPLOAD_SIZE_MB=50
ALLOWED_UPLOAD_EXTENSIONS=.pdf,.xlsx,.xls,.csv
UPLOAD_DIR=/var/uploads/arr-dss
VIRUS_SCAN_ENABLED=true

# ─── Encryption Settings ───
ENCRYPTION_KEY=your-256-bit-encryption-key-here
ENCRYPTION_ALGORITHM=aes-256-gcm

# ─── Audit & Logging ───
AUDIT_LOG_LEVEL=INFO
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years for regulatory compliance
LOG_FORMAT=json
SENTRY_DSN=your-sentry-dsn-here

# ─── Email Configuration (for notifications) ───
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true

# ─── External API Keys ───
# These should be rotated regularly
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# ─── Regulatory Settings ───
KSERC_ORDER_DATE=30.06.2025
MYT_CONTROL_PERIOD=2022-27
T_AND_D_LOSS_TARGET=0.14

# ─── SBU Configuration ───
SBU_PARTITIONING_ENABLED=true
SBU_ALLOWED_VALUES=SBU-G,SBU-T,SBU-D

# ─── Feature Flags ───
ENABLE_MFA=true
ENABLE_AUDIT_TRAIL=true
ENABLE_ANOMALY_DETECTION=true
ENABLE_AUTO_REPORT_GENERATION=false

# ─── Compliance ───
GDPR_COMPLIANT=true
DATA_RETENTION_YEARS=7
BACKUP_RETENTION_DAYS=90
